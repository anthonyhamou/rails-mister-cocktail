<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path("sya2nsevnhdw6mv0tced.jpg") %>');">
            <div class="card-category"></div>
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>
            <a class="card-link" href="#" ></a>
        </div>
        <%= link_to '', cocktail_path(cocktail), class: 'card-link'%>
      </div>
    <% end %>
  </div>
</div>

